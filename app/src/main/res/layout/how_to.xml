<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="more summary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cards" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="your cards" />

        <include
            android:id="@+id/how_to_row"
            layout="@layout/how_to_part_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="players cards" />

        <include
            android:id="@+id/how_to_row_2"
            layout="@layout/how_to_part_1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game View" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tips" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thunders" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rejected cards" />

        <com.ordonteam.hanabi.view.GameInfoView
            android:id="@+id/how_to_game"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tips" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reject" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tips" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="full" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cards ends" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thunders" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="points" />


    </LinearLayout>
</ScrollView>