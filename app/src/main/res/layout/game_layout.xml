<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/playerRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2sp">
        <com.ordonteam.hanabi.view.PlayerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </com.ordonteam.hanabi.view.PlayerView>
        <com.ordonteam.hanabi.view.CardsRow
            android:id="@+id/playerCardRow1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="2sp"
            xmlns:customNS="http://schemas.android.com/apk/res/com.ordonteam.hanabi"
            customNS:row="1"
            android:gravity="center">
        </com.ordonteam.hanabi.view.CardsRow>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2sp">
        <com.ordonteam.hanabi.view.PlayerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </com.ordonteam.hanabi.view.PlayerView>
        <com.ordonteam.hanabi.view.CardsRow
            android:id="@+id/playerCardRow2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="2sp"
            android:gravity="center">
        </com.ordonteam.hanabi.view.CardsRow>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2sp">
        <com.ordonteam.hanabi.view.PlayerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </com.ordonteam.hanabi.view.PlayerView>
        <com.ordonteam.hanabi.view.CardsRow
            android:id="@+id/playerCardRow3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="2sp"
            android:gravity="center">
        </com.ordonteam.hanabi.view.CardsRow>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/playerRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2sp">
        <com.ordonteam.hanabi.view.PlayerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </com.ordonteam.hanabi.view.PlayerView>
        <com.ordonteam.hanabi.view.CardsRow
            android:id="@+id/playerCardRow4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="2sp"
            android:gravity="center">
        </com.ordonteam.hanabi.view.CardsRow>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/gameInfoRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <com.ordonteam.hanabi.view.CardsRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center">

            </com.ordonteam.hanabi.view.CardsRow>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >
        <com.ordonteam.hanabi.view.GameInfoView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            ></com.ordonteam.hanabi.view.GameInfoView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="blabla bla"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/playerRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2sp">
        <com.ordonteam.hanabi.view.PlayerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </com.ordonteam.hanabi.view.PlayerView>
        <com.ordonteam.hanabi.view.CardsRow
            android:id="@+id/playerCardRow5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="2sp"
            android:gravity="center">
        </com.ordonteam.hanabi.view.CardsRow>
    </LinearLayout>


</LinearLayout>